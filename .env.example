# SQLite Database Configuration
DATABASE_PATH=./data/contacts.db

# Rate limiting (submissions per hour per IP address)
RATE_LIMIT_PER_HOUR=5

# Admin Panel Security
# Bcrypt hashed password (secure - use this for production)
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password_here

# JWT Secret for token authentication (generate a secure 64-character hex string)
JWT_SECRET=your_jwt_secret_here

# Admin Token Secret (for additional admin authentication)
ADMIN_TOKEN_SECRET=your_admin_token_secret_here

# Anthropic API Key for Claude AI Chatbot
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Chat rate limiting (messages per minute per IP)
CHAT_RATE_LIMIT_PER_MINUTE=10

# Optional: Email notifications (configure if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# NOTIFY_EMAIL=contact@agencehyperweb.com